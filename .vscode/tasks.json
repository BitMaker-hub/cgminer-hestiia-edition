{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "rust: cargo build ARM",
            "type": "cargo",
            "command": "build",
            "args": ["--target=armv7-unknown-linux-gnueabihf"],
            "problemMatcher": [
                "$rustc"
            ],
            "group": "build",
        },
        {
            "label": "Build Native X86-X64",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/build_native.sh",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
        },
        {
            "label": "Build armv7",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/build_target.sh",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
        },
        {
            "label": "Build debug armv7",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/build_target_debug.sh",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
        },
        {
            "label": "send debug armv7",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/send_to_target.sh",
            "args": ["debug"],
            "group": "none",
            "options": {
                "cwd": "${workspaceFolder}"
            },
        },
        {
            "label": "send release armv7",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/send_to_target.sh",
            "args": ["release"],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
        },
    ]
}
  